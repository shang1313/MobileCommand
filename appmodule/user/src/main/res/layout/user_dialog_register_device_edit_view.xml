<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_action_color_stroke_background_2"
        android:hint="@string/user_label_register_device_input_hint"
        android:minHeight="40dp"
        android:paddingStart="@dimen/app_style_dp_8"
        android:paddingEnd="@dimen/app_style_dp_8"
        android:singleLine="true"
        android:textSize="16sp" />

</LinearLayout>