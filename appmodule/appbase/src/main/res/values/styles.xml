<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  application theme. -->
    <style name="SlcAppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/androidTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/androidTextColorSecondary</item>
        <item name="android:textColorHint">@color/androidTextColorHint</item>
    </style>

    <style name="SlcAppThemeFullScreen" parent="SlcAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--dialog风格activity-->
    <style name="TipDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--卡片模块-->
    <style name="cardViewByModuleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    <!--卡片模块标题-->
    <style name="cardViewTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/app_style_dp_16</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <!--首页工作台启动器卡片风格-->
    <style name="cardViewByWorkbenchLauncherStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>
    <!--首页工作台启动器卡片内部图片-->
    <style name="cardViewByWorkbenchLauncherIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/app_style_dp_12</item>
    </style>
    <!--首页工作台卡片启动器父布局Item点击效果布局-->
    <style name="cardViewByWorkbenchItemParentStyle" parent="@style/ZWWLayout">
        <item name="android:foreground">?selectableItemBackground</item>
    </style>
    <!--首页工作台卡片启动器父布局Item-->
    <style name="cardViewByWorkbenchItemStyle" parent="@style/LinearLayoutVerticalMW">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/app_style_dp_8</item>
        <item name="android:paddingBottom">@dimen/app_style_dp_12</item>
    </style>
    <!--卡片启动器文字风格-->
    <style name="cardViewByWorkbenchItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_style_dp_8</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="generalItemLayoutStyle" parent="LinearLayoutHorizontalMW">
        <item name="android:paddingStart">@dimen/app_style_dp_16</item>
        <item name="android:paddingEnd">@dimen/app_style_dp_16</item>
        <item name="android:paddingTop">@dimen/app_style_dp_12</item>
        <item name="android:paddingBottom">@dimen/app_style_dp_12</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="generalItemIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="generalItemMoreStyle" parent="WWLayout">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="srcCompat">@drawable/ic_arrow_right</item>
    </style>

    <style name="generalItemTitleStyle" parent="WWLayout">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="generalItemSubTitleStyle" parent="generalItemTitleStyle">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="generalInputLayoutStyle">
        <item name="android:layout_marginTop">@dimen/app_style_dp_8</item>
        <item name="android:layout_marginStart">@dimen/app_style_dp_16</item>
        <item name="android:layout_marginEnd">@dimen/app_style_dp_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="generalInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="generalInputViewLayoutStyle">
        <item name="android:layout_marginTop">@dimen/app_style_dp_8</item>
        <item name="android:layout_marginStart">@dimen/app_style_dp_16</item>
        <item name="android:layout_marginEnd">@dimen/app_style_dp_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="generalInputViewTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="generalActionButtonStyle" parent="MWLayout">
        <item name="android:layout_marginTop">@dimen/app_style_dp_16</item>
        <item name="android:layout_marginBottom">@dimen/app_style_dp_16</item>
        <item name="android:layout_marginStart">@dimen/app_style_dp_16</item>
        <item name="android:layout_marginEnd">@dimen/app_style_dp_16</item>
        <item name="android:background">@drawable/bg_action_color_accent_2</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--水平分规器-->
    <style name="MyDividerH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider</item>
    </style>
    <!--垂直分规器-->
    <style name="MyDividerV">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>
    <!--头像文字大小-->
    <style name="tvIconTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_action_color_round_accent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="notifyPointTextView">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@drawable/bg_action_color_round_red1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10dp</item>
    </style>
</resources>