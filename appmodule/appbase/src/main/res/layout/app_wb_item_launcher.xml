<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/cardViewByWorkbenchItemParentStyle">

    <LinearLayout style="@style/cardViewByWorkbenchItemStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_launcher"
                style="@style/cardViewByWorkbenchLauncherStyle"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/app_style_dp_8">

                <ImageView
                    android:id="@+id/iv_icon"
                    style="@style/cardViewByWorkbenchLauncherIconStyle" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/cv_launcher"
                android:layout_marginEnd="-8dp"
                android:background="@drawable/bg_action_color_round_red1"
                android:gravity="center"
                android:minWidth="@dimen/app_style_dp_14"
                android:minHeight="@dimen/app_style_dp_14"
                android:textColor="@android:color/white"
                android:textSize="8dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            style="@style/cardViewByWorkbenchItemTextStyle" />
    </LinearLayout>
</FrameLayout>